<style type="text/css">
  .theLastDeck .inner {
    text-align: center;
    margin-top: -1em;
  }
  .theLastDeck img {
    width: 280px;
    height: 490px;
    object-fit: cover;
    object-position: 50% 50%;
  }
</style>
<div class="theLastDeck">
  <h6>
    @{{ entry.handle }}
  </h6>
  <h4 style="font-size: 0.9em;">
    {{ entry.title }}
  </h4>
  <div class="inner">
    <img src={{ entry.tweet.entities.media.0.media_url_https }} />
  </div>
  {{#unless last}}<hr />{{/unless}}
</div>
